# Load asdf versions
use asdf

# Create and activate Python virtual environment
if [[ ! -d "venv" ]]; then
    echo "Creating Python virtual environment..."
    python -m venv venv
fi

source venv/bin/activate

# Load environment variables from server/.env if it exists
if [[ -f "server/.env" ]]; then
    dotenv server/.env
fi

# Add server directory to Python path for development
export PYTHONPATH="${PWD}/server:${PYTHONPATH}"

echo "üêç Python virtual environment activated"
echo "üì¶ Ready for org-bridge development" 